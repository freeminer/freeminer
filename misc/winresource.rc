#include <windows.h>
#include <commctrl.h>
#include <richedit.h>
#define USE_CMAKE_CONFIG_H
#include "config.h"
#undef USE_CMAKE_CONFIG_H

#if RUN_IN_PLACE
	#define BUILDMODE "RUN_IN_PLACE=1"
#else
	#define BUILDMODE "RUN_IN_PLACE=0"
#endif

LANGUAGE 0, SUBLANG_NEUTRAL
130        ICON         "freeminer.ico"

/////////////////////////////////////////////////////////////////////////////
//
// Version
//

1 VERSIONINFO
 FILEVERSION VERSION_MAJOR,VERSION_MINOR,VERSION_PATCH,0
 PRODUCTVERSION VERSION_MAJOR,VERSION_MINOR,VERSION_PATCH,0
 FILEFLAGSMASK 0x3fL
#ifndef NDEBUG
 FILEFLAGS 0x1L
#else
 FILEFLAGS 0x0L
#endif
 FILEOS VOS_NT_WINDOWS32
 FILETYPE VFT_APP
 FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
    BEGIN
        VALUE "Comments", ""
        VALUE "CompanyName", PROJECT_NAME " community"
        VALUE "FileDescription", PROJECT_NAME " engine main executable"
        VALUE "FileVersion", VERSION_STRING
        VALUE "InternalName", PROJECT_NAME
        VALUE "LegalCopyright", "(c) 2014 celeron55"
        VALUE "LegalTrademarks", """Freeminer"" is the property of the Minetest community, don't use it without permission!"
        VALUE "OriginalFilename", "freeminer.exe"
        VALUE "PrivateBuild", VERSION_EXTRA
        VALUE "ProductName", PROJECT_NAME
        VALUE "ProductVersion", PRODUCT_VERSION_STRING
        VALUE "SpecialBuild", BUILDMODE
    END
END
BLOCK "VarFileInfo"
BEGIN
    VALUE "Translation", 0x409, 1200
END
END

